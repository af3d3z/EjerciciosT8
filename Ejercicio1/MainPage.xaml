<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1.MainPage">

    <ScrollView>
        <Border Stroke="Purple" Margin="8" StrokeThickness="10">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="32, 32, 0, 0"></RoundRectangle>
            </Border.StrokeShape>
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Button MaximumWidthRequest="200" BorderColor="Black" Margin="5" BorderWidth="5"  VerticalOptions="Center" HorizontalOptions="Center" Text="Botón1"></Button>
                <Button MaximumWidthRequest="100" Text="Botón2" Margin="5"></Button>
                <Button MaximumWidthRequest="100" Text="Botón3" Margin="5"></Button>
                <HorizontalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Margin="5">
                    <Label Text="Nombre: " Margin="5"></Label>
                    <Entry WidthRequest="100" Margin="5"></Entry>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>
    </ScrollView>

</ContentPage>
