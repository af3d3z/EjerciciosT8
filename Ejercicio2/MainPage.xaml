<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio2.MainPage">

    <ScrollView Padding="10">
        <FlexLayout Direction="Column">
            <Label HorizontalTextAlignment="Center" TextColor="Blue" Text="HEADER" BackgroundColor="Cyan"></Label>
            <FlexLayout FlexLayout.Grow="1">
                <Label HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FlexLayout.Grow="1" Text="CONTENT" BackgroundColor="Grey" TextColor="Purple"></Label>
                <BoxView Color="Blue" FlexLayout.Basis="50" FlexLayout.Order="-1"></BoxView>
                <BoxView Color="Green" FlexLayout.Basis="50"></BoxView>
            </FlexLayout>
            <Label HorizontalTextAlignment="Center" Text="FOOTER" TextColor="Purple" BackgroundColor="Pink"></Label>
        </FlexLayout>
    </ScrollView>

</ContentPage>
